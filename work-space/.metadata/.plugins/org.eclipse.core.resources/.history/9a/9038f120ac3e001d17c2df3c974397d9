protected void refreshSemantic() {
	if (resolveSemanticElement() == null) {
		return;
	}
	java.util.LinkedList<org.eclipse.core.runtime.IAdaptable> createdViews = new java.util.LinkedList<org.eclipse.core.runtime.IAdaptable>();
			java.util.List<ui_diagram.diagram.part.Ui_diagramNodeDescriptor> childDescriptors = 							ui_diagram.diagram.part.Ui_diagramDiagramUpdater.getUI_Diagram_1000SemanticChildren((org.eclipse.gmf.runtime.notation.View) getHost().getModel());
